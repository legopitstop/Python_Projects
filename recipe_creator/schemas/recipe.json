{
    "$id": "https://raw.githubusercontent.com/legopitstop/Python_Projects/main/recipe_creator/schemas/recipe.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "recipe",
    "description": "JSON Schema for Recipe Creator recipes",
    "type": "object",
    "default": {},
    "required": [
        "filename",
        "namespace",
        "options",
        "outline",
        "recipes",
        "items",
        "selected"
    ],
    "properties": {
        "filename": {
            "description": "The export name of the recipe.",
            "type": "string"
        },
        "namespace": {
            "description": "The namespace id for all the recipes.",
            "type": "string",
            "examples": [
                "minecraft"
            ]
        },
        "options": {
            "description": "A list of custom options used for creating the recipe.",
            "type": "object",
            "default": {},
            "additionalProperties": {
                "type": [
                    "string",
                    "boolean",
                    "number",
                    "null"
                ]
            }
        },
        "outline": {
            "description": "A list of all recipe UUID's to display.",
            "type": "array",
            "default": [],
            "items": {
                "type": "string"
            }
        },
        "selected": {
            "description": "The selected recipe's index value.",
            "type":["integer","null"],
            "minimum": 0
        },
        "recipes": {
            "description": "A list of recipes for this project.",
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "default": {},
                "required": [
                    "uuid",
                    "type",
                    "name",
                    "options",
                    "slots",
                    "selected"
                ],
                "properties": {
                    "uuid": {
                        "description": "The UUID for this recipe.",
                        "type": "string"
                    },
                    "name": {
                        "description": "The recipe id. Used to display the recipe in the listbox.",
                        "type": "string"
                    },
                    "selected": {
                        "description": "The selected slot's index value.",
                        "type":["integer", "null"],
                        "minimum": 0
                    },
                    "options": {
                        "description": "A mapping of custom options defined in the recipe type JSON.",
                        "type": "object",
                        "default": {},
                        "additionalProperties": {
                            "type": [
                                "string",
                                "boolean",
                                "number",
                                "null"
                            ]
                        }
                    },
                    "type": {
                        "description": "The type of recipe that this was built with. TODO Add default types",
                        "type": "string",
                        "$ref": "https://raw.githubusercontent.com/legopitstop/Python_Projects/main/recipe_creator/schemas/common.json#/definitions/recipe_types"
                    },
                    "slots": {
                        "description": "A mapping of each slot item",
                        "type": "object",
                        "default": {},
                        "additionalProperties": {
                            "description": "The slot id",
                            "type": [
                                "object",
                                "null"
                            ],
                            "default": {},
                            "properties": {
                                "item": {
                                    "description": "The id of the item inside the slot",
                                    "$ref": "https://legopitstop.github.io/JSON-Schemas/minecraft/java/item.json"
                                },
                                "count": {
                                    "description": "The number of items in this slot",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 64
                                }
                            }
                        }
                    }
                }
            }
        },
        "items": {
            "description": "A list of local items for this project.",
            "type": "array",
            "default": [],
            "items": {
                "$ref": "https://raw.githubusercontent.com/legopitstop/Python_Projects/main/recipe_creator/schemas/item.json"
            }
        }
    },
    "patternProperties": {
        "^\\$": true
    },
    "additionalProperties": false
}