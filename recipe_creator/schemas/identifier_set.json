{
    "$id": "https://raw.githubusercontent.com/legopitstop/Python_Projects/main/recipe_creator/schemas/identifier_set.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "identifier_set",
    "description": "JSON Schema for Recipe Creator identifier sets",
    "type": "object",
    "default": {},
    "required": [
        "values"
    ],
    "properties": {
        "values": {
            "description": "A mapping of each key/value. key being the default id, items with the `minecraft` namespace will be in all caps (etc; STONE, COBBLESTONE). Custom namespaces will keep their case. (etc; custom:stone, custom:cobble)",
            "type": "object",
            "default": {},
            "additionalProperties": {
                "anyOf": [
                    {
                        "description": "The new identifier of the block/item.",
                        "type": "string"
                    },
                    {
                        "type": "object",
                        "default": {},
                        "required": [
                            "item"
                        ],
                        "properties": {
                            "item": {
                                "description": "The new identifier of the block/item.",
                                "type": "string"
                            },
                            "nbt": {
                                "description": "The NBT data for the block/item",
                                "type":"string"
                            },
                            "data": {
                                "description": "The id value for the block/item. Used for bedrock edition.",
                                "type": "integer"
                            }
                        }
                    }
                ]
            }
        }
    }
}